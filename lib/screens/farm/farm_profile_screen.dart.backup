      });
    } catch (e) {
      Logger.error('‚ùå Erro ao carregar dados da fazenda: $e');
      setState(() {
        _isLoading = false;
      });
      if (mounted) {
        ScaffoldMessenger.of(context).showSnackBar(
          SnackBar(
            content: const Text('Erro ao carregar dados da fazenda'),
            backgroundColor: Colors.red,
          ),
        );
      }
    }
  }

