  /// Obt√©m localiza√ß√£o atual do GPS
  Future<void> _getCurrentLocation() async {
    try {
      setState(() => _isGettingLocation = true);
      
      // Verificar se o servi√ßo de localiza√ß√£o est√° habilitado
      bool serviceEnabled = await Geolocator.isLocationServiceEnabled();
      if (!serviceEnabled) {
        _showLocationError('Servi√ßo de localiza√ß√£o desabilitado');
        return;
      }

      // Verificar permiss√µes
      LocationPermission permission = await Geolocator.checkPermission();
      if (permission == LocationPermission.denied) {
        permission = await Geolocator.requestPermission();
        if (permission == LocationPermission.denied) {
          _showLocationError('Permiss√£o de localiza√ß√£o negada');
          return;
        }
      }

      if (permission == LocationPermission.deniedForever) {
        _showLocationError('Permiss√£o de localiza√ß√£o negada permanentemente');
        return;
      }

      // Obter posi√ß√£o
      final position = await Geolocator.getCurrentPosition(
        desiredAccuracy: LocationAccuracy.high,
        timeLimit: const Duration(seconds: 10),
      );
      
      setState(() {
        _currentPosition = position;
        _selectedLocation = LatLng(position.latitude, position.longitude);
        _isGettingLocation = false;
      });
      
      // Centralizar mapa na posi√ß√£o atual
      _centerMapOnGPS();
      
      // Salvar localiza√ß√£o na fazenda
      await _saveFarmLocation();
      
    } catch (e) {
      setState(() => _isGettingLocation = false);
      _showLocationError('Erro ao obter localiza√ß√£o: $e');
    }
  }
  
