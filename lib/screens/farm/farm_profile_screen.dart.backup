  }
  
  /// Salva localiza√ß√£o da fazenda
  Future<void> _saveFarmLocation() async {
    if (_selectedLocation == null || _farm == null) return;
    
    try {
      final updatedFarm = _farm!.copyWith(
        latitude: _selectedLocation!.latitude,
        longitude: _selectedLocation!.longitude,
        updatedAt: DateTime.now(),
      );

      final result = await _farmService.updateFarm(updatedFarm);
      if (result > 0) {
        setState(() {
          _farm = updatedFarm;
        });
        
        ScaffoldMessenger.of(context).showSnackBar(
          const SnackBar(
            content: Text('Localiza√ß√£o da fazenda salva com sucesso!'),
            backgroundColor: Colors.green,
          ),
