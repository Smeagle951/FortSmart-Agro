  // M√©todos para funcionalidades espec√≠ficas
  Future<void> _loadFarmStatistics() async {
    try {
      Logger.info('üìä Carregando estat√≠sticas da fazenda...');
      
      // Obter talh√µes reais do banco de dados
      final plots = await _talhaoRepository.getTalhoes();
      final totalPlots = plots.length;
      
      // Calcular √°rea cultivada real somando as √°reas de todos os talh√µes
      double totalCultivatedArea = 0.0;
      for (var plot in plots) {
        if (plot.area > 0) {
          totalCultivatedArea += plot.area;
          Logger.info('üìè Talh√£o ${plot.name}: ${plot.area} ha');
        }
      }
      
      Logger.info('üìä Total de talh√µes: $totalPlots');
      Logger.info('üìä √Årea cultivada total: ${totalCultivatedArea.toStringAsFixed(2)} ha');
      
      // Obter dados de monitoramento
      final monitorings = await _monitoringRepository.getAll();
      final totalMonitorings = monitorings.length;
      final lastMonitoring = monitorings.isNotEmpty ? monitorings.last.date : null;
      
      // Dados de produtividade (simulados - ser√° desenvolvido posteriormente)
      _productivityData = [
        ChartData('Jan', 85.5),
        ChartData('Fev', 92.3),
        ChartData('Mar', 88.7),
        ChartData('Abr', 95.1),
        ChartData('Mai', 90.4),
        ChartData('Jun', 87.9),
      ];
      
      setState(() {
        _farmStats = {
          'totalPlots': totalPlots,
          'cultivatedArea': totalCultivatedArea,
          'totalMonitorings': totalMonitorings,
          'lastMonitoring': lastMonitoring,
          'averageProductivity': 89.8,
          'activeCrops': _farm?.crops.length ?? 0,
          'certifications': 3,
          'sustainabilityScore': 92,
        };
      });
      
      Logger.info('‚úÖ Estat√≠sticas carregadas com sucesso');
    } catch (e) {
      Logger.error('‚ùå Erro ao carregar estat√≠sticas: $e');
      // Definir valores padr√£o em caso de erro
      setState(() {
        _farmStats = {
          'totalPlots': 0,
          'cultivatedArea': 0.0,
          'totalMonitorings': 0,
          'lastMonitoring': null,
          'averageProductivity': 0.0,
          'activeCrops': 0,
          'certifications': 0,
          'sustainabilityScore': 0,
        };
      });
    }
  }

